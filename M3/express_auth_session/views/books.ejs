<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Books</title>
  </head>
  <body>
    <% if (user) { %>
        <p>Welcome <%= user.username %> to our secret Book List</p>
        <p>Below is a list of all available books</p>
        <ul>
        <% books.forEach(function(book) { %>
        <li><%= book.title %></li>
        <% }); %>
        </ul>
        <br />
        <form action="/logout" method="post">
          <button type="submit">Logout</button>
        </form>

    <% } else { %>
        <p>Please <a href="/login">login</a> to view the Book List</p>
    <% } %>
  </body>
</html>
